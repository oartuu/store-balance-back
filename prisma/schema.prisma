generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Company {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  users     User[]
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  isAdmin    Boolean  @default(false)

  companyId  String
  company    Company  @relation(fields: [companyId], references: [id])

  createdAt  DateTime @default(now())
}

